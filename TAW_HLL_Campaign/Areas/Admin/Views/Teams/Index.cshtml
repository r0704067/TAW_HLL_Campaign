@model IEnumerable<TAW_HLL_Campaign.Models.Team>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Total Supplies
            </th>
            <th>
                Total Victory Points
            </th>
            <th>
                Nation
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stockpile.TotalSupplies)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stockpile.TotalVictoryPoints)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nation)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TeamID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.TeamID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.TeamID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
